{% extends 'baseBack.html.twig' %}

{% block title %}List of Books{% endblock %}

{% block body %}
<h1>List of Books</h1>
<div class="table-responsive-md col-8 float-left">
    <table class="table">
        <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col" style="color: #0f6674">Name</th>
            <th scope="col" style="color: #0f6674">Author</th>
            <th scope="col" style="color: #0f6674">Price</th>
        </tr>
        </thead>
        <tbody>
        {% for book in orders.books %}
            <tr>
                <td><img src="{{ book.path }}" style="height: 50px; width: 50px"> </td>
                <td>{{ book.nom }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.prix }} Dt</td>
            </tr>
        {% endfor %}
        <tr>
            <td class="text-right" colspan="4" style="color:red"> <i class="fad fa-money-check-edit-alt" style="margin-right: 5px"></i> Total : {{ total}} DT</td>
        </tr>
        </tbody>
    </table>
</div>



</div>
</div>

{% endblock %}
{% block PageTitle %}
    List
{% endblock %}

{% block mainTitle %}
    Books
{% endblock %}