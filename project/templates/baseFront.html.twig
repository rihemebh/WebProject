    <script>
        $(window).scroll(function (e) {
            var $el = $('.navbar');
            var isPositionFixed = ($el.css('position') == 'fixed');
            if ($(this).scrollTop() > 150 && !isPositionFixed) {
                $el.css({'position': 'fixed', 'top': '0px', 'width': '100%'});
            }
            if ($(this).scrollTop() < 150 && isPositionFixed) {
                $el.css({'position': 'static', 'top': '0px', 'width': '100%'});
            }
        });
    </script>
