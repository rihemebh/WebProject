{% extends 'baseFront.html.twig' %}

{% block body %}
    <table class="table table-hover">
        <thead>
        <tr>
            <th>nom livre</th>
            <th>image</th>
            <th>prix</th>
            <th>langage</th>
            <th>auteur</th>
            <th>description</th>
        </tr>
        </thead>
        <tbody>
        {% for livre in livres %}
            <tr>
            <td>nom livre</td>
        <td><img src="{{livre.path}}" alt="{{ livre.auteur }}" width="50px" height="50px" class="rounded-circle"></td>
        <td>{{ livre.prix }}</td>
        <td>{{ livre.langage }}</td>
        <td>{{ livre.auteur }}</td>
        <td>{{ livre.description }}</td>
            </tr>
        {% endfor %}
        </tbody>

    </table>

{% endblock %}
