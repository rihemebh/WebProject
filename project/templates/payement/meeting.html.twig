{% extends 'baseFront.html.twig' %}

{% block Title %}
    Arrange a Meeting with US
{% endblock %}

{% block style %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
          crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('Datepicker/jquery.datetimepicker.css') }}">
    <link rel="stylesheet" href="{{ asset('Panier/jomb.css') }}">
    <link rel="stylesheet" href={{ asset('Account/AccountStyle.css') }}>
{% endblock %}

{% block body %}

    <div >
        <a href="{{ path('payement') }}" style="color: #577C85;margin-left: 50px;"> <i class="fas fa-arrow-left"></i> Back To Payement</a>
    </div>
    <hr style="width:100% ; margin-left: 20px;">
    <div style="margin-top:100px;margin-bottom: 100px">

    <div class="container" style="display: flex; flex-direction: row; justify-content: center; align-items: center;">

        {{ form_start(formview , {'attr' : { 'novalidate': 'novalidate','autocomplete':'off' }}) }}
        <div class="row">
            <div class="box">
                <div class="ad">
                   <p class="label" style="margin-bottom: 30px;" > <i class="fad fa-calendar"></i> Choose a Day:</p>
                </div>
                <div style="margin-top: -25px">
                    {{ form_errors(formview.datePayement) }}
                </div>
            {{ form_widget(formview.datePayement) }}
        </div>
            <div class="box">
                <div class="ad">
                   <p class="label" style="margin-bottom: 30px;"> <i class="fal fa-clock" ></i>
                       Choose a Time:</p>
                </div>
                <div style="margin-top: -25px">
                    {{ form_errors(formview.timePayement) }}
                </div>

            {{ form_widget(formview.timePayement) }}
        </div>
    </div>
        <div class="row" style="margin-left: 15%;margin-bottom: 10%">
        {{ form_row(formview.Submit) }}
        </div>
        {{ form_end(formview) }}
    </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>
    <script
            src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js">
    </script>

    <script>
       $(document).ready(function(){
           var firstDay = new Date();
           var nextWeek = new Date(firstDay.getTime() + 3 * 7 * 24 * 60 * 60 * 1000);
           $('.datetimepicker').datetimepicker({
               datepicker: true,
               timepicker: false,
               minDate: firstDay,
               maxDate: nextWeek,
               format: 'd/m/Y',
               closeOnDateSelect : true,
               scrollMonth : false,
               scrollInput : false,
               scrolling: false
           });
           $('.datetimepicker').onkeydown="return false"

           $('.datetimepicker2').datetimepicker({
               datepicker: false,
               timepicker: true,
               minTime: '10:30',
               maxTime: '17:31',
               format: 'H:i',
               closeOnTimeSelect : true,
               scrollInput : false,
               step: 15
           });
       })


    </script>
{% endblock %}