{% extends 'baseFront.html.twig' %}

{% block Title %}
    Arrange a Meeting with US
{% endblock %}

{% block style %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
          crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('Datepicker/jquery.datetimepicker.css') }}">
    <link rel="stylesheet" href="{{ asset('Panier/jomb.css') }}">
{% endblock %}

{% block body %}
    <section class="meeting-jumbotron text-center mt-1">
        <div class="container">
            <h1>ONE LAST STEP</h1>
        </div>
        <div class="container mt-5">
            <div class="col-sm-7">
                <p>
                    Decide based on our timing the best moments to get your books
                </p>
            </div>
        </div>
    </section>

    <div class="container">
        {{ form_start(formview , {'attr' : {'class' : 'form-group', 'novalidate': 'novalidate','autocomplete':'off' }}) }}
        <div class="row">
            <div class="col">
                {{ form_label(formview.datePayement) }}
                <div class="form-group">
                    <div class='input-group date'>
                        {{ form_widget(formview.datePayement) }}
                        <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                    </div>
                </div>
                {{ form_errors(formview.datePayement) }}

            </div>
            <div class="col">
                {{ form_label(formview.timePayement) }}
                {{ form_widget(formview.timePayement) }}
                {{ form_errors(formview.timePayement) }}
            </div>
        </div>
        <div class="my-5"></div>
        <div class="row justify-content-center">
            <div class="col-6 col-center">
                {{ form_row(formview.Submit) }}
            </div>
            {{ form_end(formview) }}
        </div>
    </div>


{% endblock %}

{% block javascripts %}
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>
    <script
            src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js">
    </script>

    <script>
       $(document).ready(function(){
           var firstDay = new Date();
           var nextWeek = new Date(firstDay.getTime() + 3 * 7 * 24 * 60 * 60 * 1000);
           $('.datetimepicker').datetimepicker({
               datepicker: true,
               timepicker: false,
               minDate: firstDay,
               maxDate: nextWeek,
               format: 'd/m/Y',
               closeOnDateSelect : true,
               scrollMonth : false,
               scrollInput : false,
               scrolling: false
           });
           $('.datetimepicker').onkeydown="return false"

           $('.datetimepicker2').datetimepicker({
               datepicker: false,
               timepicker: true,
               minTime: '10:30',
               maxTime: '17:31',
               format: 'H:i',
               closeOnTimeSelect : true,
               scrollInput : false,
               step: 15
           });
       })


    </script>
{% endblock %}