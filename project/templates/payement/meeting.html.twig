{% extends 'baseFront.html.twig' %}

{% block Title %}
    Arrange a Meeting with US
{% endblock %}

{% block style %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
          crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('Datepicker/jquery.datetimepicker.css') }}">
    <style>


        .meeting-jumbotron{
            position: relative;
            padding: 2rem 1rem;
            height: 300px;
            width: 100%;
            margin-bottom: 2rem;
            color: rgba(0,0,0,0);
        }
        .meeting-jumbotron:hover{
            color: rgba(0,0,0,1);
        }
        .meeting-jumbotron::before {
            content: "";
            position: absolute;
            top: 0px;
            right: 0px;
            bottom: 0px;
            left: 0px;
            background-image: url("{{ asset('shake2.jpg') }}");
            background-position: center;
            background-size: cover;

        }
        .meeting-jumbotron:hover:before{
            opacity: 0.6;
        }
        .meeting-jumbotron h1{
            position: relative;
        }
        .meeting-jumbotron p{
            position: relative;
        }
    </style>
{% endblock %}

{% block body %}
    <section class="meeting-jumbotron text-center mt-1">
        <div class="container">
            <h1>ONE LAST STEP</h1>
        </div>
        <div class="container mt-5">
            <div class="col-sm-7">
                <p>
                    Decide based on our timing the best moments to get your books
                </p>
            </div>
        </div>
    </section>

