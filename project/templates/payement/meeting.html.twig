        <div class="row">
            <div class="col">{{ form_row(formview.datePayement) }}</div>
            <div class="col">{{ form_row(formview.timePayement) }}</div>
        </div>
        <div class="my-5"></div>
        <div class="row justify-content-center">
            <div class="col-6 col-center">
                {{ form_row(formview.Submit) }}
            </div>
        </div>
    </div>


{% endblock %}

{% block javascripts %}
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>
    <script
            src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js">
    </script>

    <script>
       $(document).ready(function(){
           var firstDay = new Date();
           var nextWeek = new Date(firstDay.getTime() + 3 * 7 * 24 * 60 * 60 * 1000);
           $('.datetimepicker').datetimepicker({
               datepicker: true,
               timepicker: false,
               minDate: firstDay,
               maxDate: nextWeek,
               format: 'd/m/Y',
               closeOnDateSelect : true,
               scrollMonth : false,
               scrollInput : false,
               scrolling: false
           });
           $('.datetimepicker').onkeydown="return false"

           $('.datetimepicker2').datetimepicker({
               datepicker: false,
               timepicker: true,
               minTime: '10:30',
               maxTime: '17:31',
               format: 'H:i',
               closeOnTimeSelect : true,
               scrollInput : false,
               step: 15
           });
       })


    </script>
{% endblock %}